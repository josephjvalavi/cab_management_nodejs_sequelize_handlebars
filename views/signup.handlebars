<div class="loginparent">
    <div class="imagebox">
        <img src="https://olawebcdn.com/images/v1/bg_city.jpg" alt="">

    </div>
    <div class="formblock">
        <div class="container-fluid">
            <div class="col-sm-9 offset-2 ">
                <h1 class="text-center">Signup</h1>

                <form method="POST">
                    <div>
                        <label>first Name</label>
                        <input type="text" name="firstname" class="form-control" placeholder="firstName" minlength="5"
                            maxlength="50" required>
                    </div>
                    <div>
                        <label>Last Name</label>
                        <input type="text" name="lastname" class="form-control" placeholder="lastName" minlength="5"
                            maxlength="50" required>
                    </div>
                    <div>
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" placeholder="me@example.com" minlength="5"
                            maxlength="50" required>
                    </div>
                    <div>
                        <label>phone</label>
                        <input type="text" name="phone" class="form-control" placeholder="phone" minlength="10"
                            maxlength="10" required>
                    </div>
                    <div>
                        <label>Adress</label>
                        <input type="text" name="adress" class="form-control" placeholder="current adress" minlength="5"
                            maxlength="50" required>
                    </div>

                    <div>
                        <label>Password</label>
                        <input type="password" placeholder="password" name="password" class="form-control" minlength="8"
                            maxlength="25" required>
                    </div>
                    <div>
                        <label>Confirm Password</label>
                        <input type="password" name="cpassword" placeholder="confirm password" class="form-control"
                            minlength="8" maxlength="25" required>
                    </div>
                    <div class="d-grid mt-4">
                        {{#if data}}
                        <p class="text-danger">{{data}}</p>
                    {{/if}}
                        <button class="btn btn-primary shadow" type="submit" id="btn-login">SIGNUP</button>

                    </div>
                    
            </div>
            </form>

        </div>
    </div>
</div>
